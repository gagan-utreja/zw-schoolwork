<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        
        <item name="android:actionBarSize">38dip</item> 
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- Map theme. -->
    <style name="mapView">
    	<item name="android:gravity">center</item>
	</style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <style name="Header">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/HoloLightBlue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/list_section_divider_holo_custom</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">@dimen/widget_standard_padding</item>
        <item name="android:paddingRight">@dimen/widget_standard_padding</item>
        <item name="android:layout_marginLeft">@dimen/header_mini_margin</item>
        <item name="android:layout_marginRight">@dimen/header_mini_margin</item>
    </style>
    
    <style name="HeaderLogin">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/Black</item>
        
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
       
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">@dimen/widget_standard_padding</item>
        <item name="android:paddingRight">@dimen/widget_standard_padding</item>
        <item name="android:layout_marginLeft">@dimen/header_mini_margin</item>
        <item name="android:layout_marginRight">@dimen/header_mini_margin</item>
    </style>
    
    <style name="HeaderGrey">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/LightGrey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/list_section_divider_ltgrey_custom</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">@dimen/widget_standard_padding</item>
        <item name="android:paddingRight">@dimen/widget_standard_padding</item>
        <item name="android:layout_marginLeft">@dimen/header_mini_margin</item>
        <item name="android:layout_marginRight">@dimen/header_mini_margin</item>
    </style>

    <style name="ListView">
        <item name="android:dividerHeight">2dip</item>
        <item name="android:divider">@drawable/table_divider</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="ListSubtitleText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/table_text_light</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Custom Spinner -->
    <style name="Spinner">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/spinner</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="ListSpinner" parent="Spinner">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>
    
</resources>